<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Job Application Form</title>
</head>
<body class="bg-gray-200 p-8">

    <div class="max-w-md mx-auto bg-white rounded p-6">
        <h2 class="text-2xl font-semibold mb-6">Job Application Form</h2>

        <form action="/apply" method="POST" encType="multipart/form-data">

            <!-- Personal Information -->
            <div class="mb-4">
                <label for="full_name" class="block text-sm font-medium text-gray-600">First Name</label>
                <input type="text" id="firse_name" name="first_name" class="mt-1 p-2 w-full border rounded-md" required>
            </div>

            <div class="mb-4">
                <label for="full_name" class="block text-sm font-medium text-gray-600">Last Name</label>
                <input type="text" id="last_name" name="last_name" class="mt-1 p-2 w-full border rounded-md" required>
            </div>

            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-600">Email Address</label>
                <input type="email" id="email" name="email" class="mt-1 p-2 w-full border rounded-md" required>
            </div>

            <!-- Resume Upload -->
            <div class="mb-4">
                <label for="resume" class="block text-sm font-medium text-gray-600">Resume (PDF)</label>
                <input type="file" id="resume" name="resume" class="mt-1" required>
                <p class="text-xs text-gray-500 mt-1">Upload your resume in PDF format.</p>
            </div>

            <!-- Cover Letter -->
            <div class="mb-4">
                <label for="cover_letter" class="block text-sm font-medium text-gray-600">Cover Letter</label>
                <textarea id="cover_letter" name="cover_letter" rows="4" class="mt-1 p-2 w-full border rounded-md"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="mt-6">
                <button type="submit" class="bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600">Submit Application</button>
            </div>

        </form>
    </div>

</body>
</html>

